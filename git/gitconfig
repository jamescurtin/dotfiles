[include]
	path = ~/.gitconfig.local
[push]
	default = current
[color]
	ui = true
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[gitflow "prefix"]
	feature = feature-
	release = release-
	hotfix = hotfix-
	support = support-
	versiontag = v
[url "git@github.com"]
        insteadOf = gh:
[alias]
	a = add --all
	#############
	b = branch
	ba = branch -a
	#############
	c = commit
	cm = commit -m
	#############
	cl = clone
	#############
	cp = cherry-pick
	#############
	d = diff
	#############
	f = fetch
	fo = fetch origin
	fu = fetch upstream
	#############
	fk = fsck
	#############
	g = grep -p
	#############
	l = log --oneline
	lg = log --oneline --graph --decorate
	#############
	ls = ls-files
	lsf = !git ls-files | grep -i
	#############
	m = merge
	ma = merge --abort
	mc = merge --continue
	ms = merge --skip
	#############
	o = checkout
	ob = checkout -b
	#############
	ps = push
	psf = push -force-with-lease
	#############
	pl = pull
	#############
	rbi = rebase --interactive
	#############
	s = status
	sb = status -s -b
	#############
	aliases = !git config -l | grep alias | cut -c 7-
[core]
	autocrlf = false
	preloadindex = true
	fscache = true
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX
[pull]
	rebase = true
[fetch]
	prune = true
[log]
	decorate = short
[http]
	sslVerify = false
[commit]
	gpgsign = true
